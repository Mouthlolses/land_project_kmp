
CREATE TABLE IF NOT EXISTS User (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    password TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS Client (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    clientName TEXT NOT NULL,
    birthDate TEXT NOT NULL,
    clientRg TEXT NOT NULL,
    clientCpf TEXT NOT NULL,
    clientAddressRoad TEXT NOT NULL,
    clientHouseNumber TEXT NOT NULL,
    clientComplement TEXT,
    clientNeighborhood TEXT NOT NULL,
    clientCity TEXT NOT NULL,
    clientPhone TEXT NOT NULL,
    clientEmail TEXT NOT NULL,
    clientFileDocPath TEXT NOT NULL,
    propertyPrice TEXT NOT NULL,
    entryInstallment TEXT,
    valueOfMonthlyInstallments TEXT NOT NULL,
    datesForMonthlyInstallments TEXT NOT NULL,
    paymentFrequencyForInstallments TEXT NOT NULL,
    numberOfInstallments TEXT NOT NULL
);

insertUser:
INSERT INTO User(name, password)
VALUES (?, ?);

selectAllUsers:
SELECT * FROM User;

selectUserByNameAndPassword:
SELECT * FROM User
WHERE name = ? AND password = ?;


insertClient:
INSERT INTO Client(
    clientName, birthDate, clientRg, clientCpf,
    clientAddressRoad, clientHouseNumber, clientComplement,
    clientNeighborhood, clientCity, clientPhone, clientEmail,
    clientFileDocPath, propertyPrice, entryInstallment, valueOfMonthlyInstallments, datesForMonthlyInstallments, paymentFrequencyForInstallments,  numberOfInstallments
) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ?, ? , ?, ?, ?, ?, ?);

selectAllClients:
SELECT * FROM Client;

selectClientById:
SELECT * FROM Client WHERE id = ?;

deleteClientById:
DELETE FROM Client WHERE id = ?;
